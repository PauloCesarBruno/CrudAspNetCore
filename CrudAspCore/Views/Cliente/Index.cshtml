@model IEnumerable<CrudAspCore.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h2>Manipulação de Dados</h2>

<p>
    <a asp-action="Create"  class="btn btn-primary">Add. Novo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credito)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-primary" >Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-success" >Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger" >Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
